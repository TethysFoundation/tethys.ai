.heading {
  font-size: 24px;
  margin: 40px 0 20px;
}

.count-down {
  display: inline-block;
  font-weight: 100;
  text-align: center;
  font-size: 30px;
}

.time-component {
  width: 80px;
  padding: 10px;
  background: #5f5f5f;
  display: inline-block;
  margin-right: 10px;
}

.time-component > span {
  width: 60px;
  padding: 15px;
  border-radius: 3px;
  background: #6e6e6e;
  display: inline-block;
}

.label {
  padding-top: 5px;
  font-size: 16px;
}
